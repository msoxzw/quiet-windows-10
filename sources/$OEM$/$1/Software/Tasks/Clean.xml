<?xml version="1.0" encoding="UTF-16"?>
<Task version="1.2" xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
  <Triggers>
    <LogonTrigger>
      <Repetition>
        <Interval>P1D</Interval>
      </Repetition>
    </LogonTrigger>
    <RegistrationTrigger>
      <Repetition>
        <Interval>P1D</Interval>
      </Repetition>
    </RegistrationTrigger>
  </Triggers>
  <Principals>
    <Principal id="Author">
      <GroupId>S-1-5-32-545</GroupId>
      <RunLevel>HighestAvailable</RunLevel>
    </Principal>
  </Principals>
  <Settings>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <IdleSettings>
      <StopOnIdleEnd>false</StopOnIdleEnd>
    </IdleSettings>
    <RunOnlyIfIdle>true</RunOnlyIfIdle>
  </Settings>
  <Actions Context="Author">
    <Exec>
      <Command>PowerShell</Command>
      <Arguments>$Signature = Get-AuthenticodeSignature $(if ([Environment]::Is64BitOperatingSystem) {'CCleaner64.exe'} else {'CCleaner.exe'}); if ($Signature.Status -eq 0) {& $Signature.Path /AUTO}</Arguments>
      <WorkingDirectory>%ChocolateyInstall%\lib\ccleaner.portable\tools</WorkingDirectory>
    </Exec>
  </Actions>
</Task>